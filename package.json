{
  "name": "feature-generator",
  "displayName": "Flutter Feature generator",
  "description": "Generate Flutter feature folder structure following clean architecture",
  "publisher": "WalidCherifi31",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "icon" : "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/WalidCherifi31/feature-generator"
  },
  "keywords": [
        "flutter",
        "feature",
        "generator",
        "clean architecture",
        "scaffold"
    ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "feature-generator.newFeature",
        "title": "Create New Flutter Feature"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
